<div class="mobile-aside min-vh-100 mobile-aside-wrapper mx-w380px w-sm-auto">
    <div class="mobile-aside-wrapper-inner">
        <div class="mobile-header-top d-flex justify-content-between px-8 py-4">
            {% include get_template('../common/logo', _self) with {
                option_key: 'desktop_logo'
            } %}
            <a href="#" class="mobile-aside-close my-auto">
                {{ get_icon('fontawesome/xmark', {class: 'svg-icon icon-md icon-dark'})|raw }}
            </a>
        </div>
        <div class="border-bottom"></div>
        <div class="mobile-header-content p-8">
            <div class="border-2 border-light-primary w-100 mb-5">
                {{ get_search_form({
                    target: 'header',
                    mobile: 1
                })|raw }}
            </div>

            {% if has_nav_menu('mobile-menu') %}
                <nav>
                    {{ wp_nav_menu({
                        theme_location: 'mobile-menu',
                        container_class: ''
                    }) }}
                </nav>
            {% endif %}
            {% if is_active_sidebar('mobile-aside') %}
                {{ dynamic_sidebar('mobile-aside') }}
            {% endif %}
            <div class="fs-4x">
                {% include get_template('../common/copyright', _self) with {separator: ' ,'} %}
            </div>
        </div>
    </div>
</div>
