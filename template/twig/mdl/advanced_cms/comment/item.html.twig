<li class="bg-transparent comment-list-item{% if depth > 1 %} comment-child{% endif %}"
    id="comment-{{ id|esc_attr }}" data-page="{{ page }}">
    <article data-id="{{ id|esc_attr }}" {{ comment_class(['d-flex w-100 border p-4 mb-7 rounded-xxl show-on-hover'], id) }}>
        <div class="mr-4 d-flex justify-content-between flex-column text-center">
            {{ get_avatar(comment, avatar_size, {class: 'avatar-img rounded-circle mx-auto mb-3'})|raw }}
             <span class="h6 my-auto text-primary author-title">{{ get_comment_author(id)|raw }}</span>
        </div>
        <div id="comment-{{ id|esc_attr }}-content" class="comment-content w-100 lh-md">
            <div class="d-flex justify-content-between mb-2">
                <time class="text-gray-500 my-auto fs-3x"
                      datetime="{{ comment.comment_date|date('Y-m-d')|esc_attr }}">
                    {{ get_comment_date()|datetime|raw }}
                </time>
                {% if not comment.comment_approved %}
                    <p class="text-primary my-auto fs-3x">{{ args.comment_waiting_text|raw }}</p>
                {% endif %}
            </div>
            <p class="font-size-sm text-gray-700 mb-0">
                {{ text|raw }}
                <span class="show-element">
                    {{ get_comment_reply_link({
                        depth: depth,
                        max_depth: max_depth,
                        reply_text: __('Reply', domain),
                    }, comment, post)|raw }}
                </span>
            </p>
        </div>
    </article>

