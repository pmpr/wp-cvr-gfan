<div class="carousel-arrows separated-arrows {{ class|esc_attr }}">

    {% set icon = icon|default('angle') %}
    {% set btn_class = btn_class|default('') ~ ' splide__arrow carousel-arrow bg-gray-100 icon-hover-white bg-hover-primary d-flex' %}
    {% set icon_attrs = {class: 'icon-md m-auto icon-dark'} %}

    <button type="button" class="square-size-45x prev swiper-button-prev {{ btn_class }} {{ prev_class }}" aria-label="{{ __('Previous', domain)|esc_attr }}">
        {{ get_icon('fasm/6/set/' ~ icon ~ '-left', icon_attrs)|raw }}
    </button>

    <button type="button" class="square-size-45x next swiper-button-next {{ btn_class }} {{ next_class }}" aria-label="{{ __('Next', domain)|esc_attr }}">
        {{ get_icon('fasm/6/set/' ~ icon ~ '-right', icon_attrs)|raw }}
    </button>

</div>
