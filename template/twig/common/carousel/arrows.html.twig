<div class="carousel-arrow separated-arrows {{ class|esc_attr }}">
    {% set icon = icon|default('angle') %}
    {% set btn_class = btn_class|default('') ~ ' bg-gray-100 icon-hover-white bg-hover-primary d-flex' %}
    {% set icon_attrs = {class: 'svg-icon icon-md m-auto icon-dark'} %}
    <a class="square-size-45x prev {{ btn_class }} {{ prev_class }}">
        {{ get_icon('fontawesome/' ~ icon ~ '-left', icon_attrs)|raw }}
    </a>
    <a class="square-size-45x next {{ btn_class }} {{ next_class }}">
        {{ get_icon('fontawesome/' ~ icon ~ '-right', icon_attrs)|raw }}
    </a>
</div>
